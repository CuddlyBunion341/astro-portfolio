---
import HobbyImage from "./HobbyImage.astro";
---

<section>
  <h2>Hobbies</h2>

  <div class="grid grid-cols-3 gap-4 container-sm">
    <HobbyImage
      path="ski"
      alt="Me skiing"
      className="col-start-1 col-span-2 row-start-1 row-span-2"
    />
    <HobbyImage
      path="minecraft"
      alt="Playing Minecraft"
      className="col-start-3 col-span-1 row-start-1 row-span-1"
    />
    <HobbyImage
      path="meme"
      alt="A funny meme"
      className="col-start-3 col-span-1 row-start-2 row-span-1"
    />
    <HobbyImage
      path="linux"
      alt="Ricing my Linux setup"
      className="col-start-2 col-span-2 row-start-3 row-span-1"
    />
    <HobbyImage
      path="cubes"
      alt="Rubic's cube collection"
      className="col-start-1 col-span-1 row-start-4 row-span-1"
    />
    <HobbyImage
      path="cat"
      alt="Playing with the neighbour's cat"
      className="col-start-3 col-span-1 row-start-4 row-span-1"
    />
    <HobbyImage
      path="fortnite"
      alt="Playing Fortnite"
      className="col-start-1 col-span-2 row-start-5 row-span-1"
    />
  </div>
</section>
