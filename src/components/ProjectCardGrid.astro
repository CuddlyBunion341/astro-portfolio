---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import HeroImage from "./HeroImage.astro";
const allProjectTiles = await getCollection("projects");
---

{
allProjectTiles.map(async (project) => (
<article class="project-tile">
    <HeroImage imagePath={project.data.heroImage} altText={project.data.name} />
      <h3>{project.data.name}</h3>
      <p>{project.data.description}</p>
      <ul>
        {project.data.tags.map((tag: string) => (
          <li>{tag}</li>
        ))}
      </ul>
      <a href={`/projects/${project.slug}`}>Read more...</a>
    </article>
  ))
}
