---
const elements = [
  { date: "2019", description: "Studies at IMS Hottingen" },
  { date: "2023", description: "Software Engineering Internship at Renuo" },
];
---

<section>
  <h3>Education</h3>

  <ul>
    {
      elements.map(({ date, description }) => (
        <li class="flex ml-2">
          <p class="border-l flex items-center py-2">
            <span class="block w-3 h-3 bg-blue-300 rounded-xl relative -left-[0.4rem]" />
            <b>{date}:</b>&nbsp;{description}
          </p>
        </li>
      ))
    }
  </ul>
</section>
